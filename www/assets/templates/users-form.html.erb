<form name="usersForm" style="margin-left: 3%;" data-ng-submit="newUser.addUser()" novalidate>
<div class="form">
  
      <div class="input-group" style="margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none;">Username: </span>
            </td>
            <td width="200px;">
              <input type="text" class="form-control" placeholder="Username" data-ng-model="newUser.username" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="input-group" style="margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none">Password:  </span>
            </td>
            <td width="200px;">
              <input type="password" class="form-control" placeholder="Password" data-ng-model="newUser.password" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="input-group" style="margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none">Real Name:  </span>
            </td>
            <td width="200px;">
              <input type="text" class="form-control" placeholder="Real Name" data-ng-model="newUser.realName" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="input-group" style="margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none">Available Hours:  </span>
            </td>
            <td width="200px;">
              <input type="text" class="form-control" placeholder="6pm-6am" data-ng-model="newUser.availableHours" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="input-group" style="margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none">Current City:  </span>
            </td>
            <td width="200px;">
              <input type="text" class="form-control" placeholder="Berkeley, California" data-ng-model="newUser.currentCity" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="input-group" style="margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none">Avatar URL:  </span>
            </td>
            <td width="200px;">
              <input type="text" class="form-control" placeholder="trollface.jpg" data-ng-model="newUser.profileUrl" style="" required>
            </td>
          </tr>
        </table>
      </div>
      Your avatar: <img style="width:100px; height:100px; margin-left:18%" src="{{newUser.profileUrl}}">
      <button class="btn btn-default" style="margin-left:170px;margin-top:30px;">Create Account</button>
</div>
</form>
